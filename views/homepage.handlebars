<!-- Loop over each object in the blog posts array -->
{{#each posts as |post| }}
<div class="row mb-4 post card card-rounded">
  <div class="col-md-5" >
    <h2>
      <a href="/post/{{post.id}}">{{post.name}}</a>
    </h2>

    <p>Written by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.description}}
    </p>
  </div>
</div>
{{/each}}
